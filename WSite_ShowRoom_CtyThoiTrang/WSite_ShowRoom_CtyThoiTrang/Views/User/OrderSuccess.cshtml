@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.tb_Order>


@*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>*@


<div class="">
    <div class="row">
        <div class="col-xl-12">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <p>@item.Code</p>

                    <div class="card border shadow-none">
                        <div class="card-body">
                            @Html.Action("Par_OrderDetailSuccess", "User", new { id = item.OrderId })




                            <div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mt-3">
                                           
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <div class="mt-3">
               
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mt-3">

                                            <h5 class="text-muted mb-2">Tổng tiền : @WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(item.TotalAmount)</h5>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-5">
                                                <samp style="color:lightslategray">
                                                    Đơn hàng đã được giao hoàn thành .
                                                    Cảm ơn bạn đã ủng hộ shop.
                                                    Shop sẽ luôn cập nhật mẫu mã mới .
                                                </samp>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                }
            }
            else
            {
               <h2> Không tồn tại đơn hàng hoàn thành</h2>
            }

            <!-- end card -->

            <div class="row my-4">
                <div class="col-sm-6">
                    <a href="/home/index" class="btn btn-link text-muted">
                        <i class="mdi mdi-arrow-left me-1"></i> Tiếp tục mua hàng
                    </a>
                </div> <!-- end col -->
                <!--<div class="col-sm-6">
                    <div class="text-sm-end mt-2 mt-sm-0">
                        <a href="ecommerce-checkout.html" class="btn btn-success">
                            <i class="mdi mdi-cart-outline me-1"></i> Checkout
                        </a>
                    </div>
                </div>-->
                <!-- end col -->
            </div> <!-- end row-->
        </div>


    </div>
    <!-- end row -->

</div>
