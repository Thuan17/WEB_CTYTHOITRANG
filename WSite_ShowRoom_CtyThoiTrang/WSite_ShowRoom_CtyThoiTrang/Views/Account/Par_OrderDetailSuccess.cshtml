@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.tb_OrderDetail>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div class="d-flex align-items-start border-bottom pb-3">
            <div class="me-4">
                <img src="@item.tb_Products.Image" alt="" class="img-cart w-25">
            </div>
            <div class="flex-grow-1 align-self-center overflow-hidden">
                <div>
                    <h5 class="text-truncate font-size-18 text-dark"><a href="@Url.Action("Detail", "Product", new { id =item.ProductId, alias = item.tb_Products.Alias }) ">@item.tb_Products.Title</a></h5>

                    <p class="text-muted mb-0">
                        <i class="bx bxs-star text-warning"></i>
                        <i class="bx bxs-star text-warning"></i>
                        <i class="bx bxs-star text-warning"></i>
                        <i class="bx bxs-star text-warning"></i>
                        <i class="bx bxs-star-half text-warning"></i>
                    </p>
                    <p class="mb-0 mt-1">Số lượng : <span class="fw-medium">@item.Quantity</span></p>
                </div>
            </div>
            <div class="flex-shrink-0 ms-2">
                <ul class="list-inline mb-0 font-size-16">
                    <li class="list-inline-item">
                        <a href="#" class="text-muted px-1">
                            <i class="mdi mdi-trash-can-outline"></i>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="#" class="text-muted px-1">
                            <i class="mdi mdi-heart-outline"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    }
}


