@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.tb_ProductCategory>
@{
    Layout = null;
}


@if (Model != null && Model.Any())
{
    <div class="banner">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="banner_item align-items-center" @*style="background-image: url(@item.Icon)"*@>
                            <div class="banner_category">
                                <a href="@item.Alias">@item.Title</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}





