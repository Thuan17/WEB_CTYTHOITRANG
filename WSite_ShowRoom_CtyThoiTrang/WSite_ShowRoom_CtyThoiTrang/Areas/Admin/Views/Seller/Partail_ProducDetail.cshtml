

@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.tb_ProductDetai>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<style>
    .ProductDetai {
        list-style: none;
    }

        .ProductDetai li {
            width: 75px;
            display: inline-block;
        }

            .ProductDetai li .btnAddToCart123 {
                display: inline-block;
            }
</style>


@if (Model != null)
{<h6 class="text-center text-info">Loại Size</h6>
    <ul class="nav nav-fill">
        @foreach (var item in Model)
        {
             
            <li class="nav-item d-inline-block">
                @if (item.Size == 1)
                {

                    <button class="red_button add_to_cart_button border-0 btn-0  btnAddList" data-id="@item.ProductDetai">S</button>
                }
                @if (item.Size == 2)
                {
                    <button class="red_button add_to_cart_button border-0 btn-0 btnAddList" data-id="@item.ProductDetai">M</button>

                }
                @if (item.Size == 3)
                {
                    <button class="red_button add_to_cart_button  border-0 btn-0 btnAddList" data-id="@item.ProductDetai">XL</button>

                }
            </li>

        }
    </ul>
}
else
{
    <h5 class=" ">
        Hết hàng
    </h5>
}




