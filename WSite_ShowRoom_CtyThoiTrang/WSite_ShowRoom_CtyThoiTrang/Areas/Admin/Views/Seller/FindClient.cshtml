@model WSite_ShowRoom_CtyThoiTrang.Models.tb_KhachHang

@{
    ViewBag.Title = "Thông tin khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSeller.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/seller/index" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Hệ thống bán hàng KTA Model</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/seller/index">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div id="show_success"></div>
                <div class="col-md-7">
                    @using (Html.BeginForm("FindClient", "Seller", FormMethod.Post, new { id = "searchForm" }))
                    {
                        <div class="input-group w-50">
                            @Html.TextBox("Search", "", new { @class = "form-control " })
                            <button type="submit" class="btn btn-success rounded-end-pill" style="width: 70px" value="Search">  <i style="color:white" class="fa-solid fa-magnifying-glass"></i>Tìm</button>

                        </div>


                    }




                    @if (ViewBag.Find != null)
                    {

                        <h3 class="text-center">Thông tin khách hàng</h3>
                        <h5>Tên khách hàng: <span> @Model.TenKhachHang</span></h5>
                        @Html.Action("Partial_ThanhToanDaCoTaiKhoan", "Seller", new { id = Model.IdKhachHang })

                    }
                    else
                    {
                        <h3 class="text-center text-danger">Khách hàng chưa có tài khoản</h3>

                        @Html.Action("Partail_ThongTinKhachHang", "Seller")
                    }


                </div>
                <div class="col-md-5">
                    <div id="load_data">
                        @Html.Action("Partial_Item_ThanhToan", "Seller")
                    </div>
                       
                    </div>
                </div>
        </div>
    </div>
    

</section>

@section scripts{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script>

    </script>
}
