
@{
    ViewBag.Title = "Thanh Toán";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSeller.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Hệ thống bán hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
   
    @if (ViewBag.CheckCart != null)
    {<div class="row">
            <div id="show_success"></div>
            <div class="col-md-9">
                <h5>Thông tin khách hàng</h5>
            
                    <div class="input-group">
                        @using (Html.BeginForm("FindClient", "Seller", FormMethod.Post))
                        {
                            @Html.TextBox("Search", "", new { @class = "form-control input-lg", @placeholder = "Số điện thoại khách hàng" })
                            <button type="submit" class="btn btn-success rounded-end-pill" style="width: 70px" value="Search">  <i class="fas fa-search"></i></button>
                        }
                    </div>
                
            </div>
            <div class="col-md-3">
                @Html.Action("Partial_Item_ThanhToan", "Seller")
            </div>
        </div>
    }
    else
    {
        <p> Không có bản ghi nào</p>
    }
</section>
        




@section scripts{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>

}
