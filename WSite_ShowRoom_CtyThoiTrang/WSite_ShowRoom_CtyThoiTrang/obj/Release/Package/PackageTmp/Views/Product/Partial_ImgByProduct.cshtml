@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.tb_ProductImage>
<style>

    .carousel-control-prev-icon, .carousel-control-next-icon {
        filter: invert(1);
    }
</style>
@if (Model != null)
{
    <div id="demo" class="carousel slide w-auto" data-bs-ride="carousel">
        <div class="carousel-inner m-3">
            <div class="carousel-indicators">

                @*<button type="button" data-bs-target="#demo" data-bs-slide-to="0" class=""></button>*@
                <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active" aria-current="true"></button>
                <button type="button" data-bs-target="#demo" data-bs-slide-to="1" class=""></button>
                @*<button type="button" data-bs-target="#demo" data-bs-slide-to="3" class=""></button>*@
            </div>
            @foreach (var item in Model)
            {

                if (item.IsDefault)
                {
                    <div class="carousel-item active">
                        <img src="@item.Image" class="img-responsive d-block" width="400px" />
                    </div>

                }
                else
                {
                    <div class="carousel-item ">
                        <img src="@item.Image" class="img-responsive d-block" width="400px" />
                    </div>
                }

            }
            <button class="carousel-control-prev m-2" type="button" data-bs-target="#demo" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next m-2" type="button" data-bs-target="#demo" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>



    </div>




}
else
{
    <p>
        Chưa có ảnh sản phẩm
    </p>
}
