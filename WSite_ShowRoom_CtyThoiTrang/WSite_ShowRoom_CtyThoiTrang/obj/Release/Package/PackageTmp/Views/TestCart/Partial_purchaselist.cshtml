@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.ShoppingCartItem>
@{
    Layout = null;
}
@if (Model != null && Model.Any())
{
    <h2>Giỏ Hàng</h2><span>@Model.Count()</span>
    var i = 0;
    var tongTien = decimal.Zero;
    <div class="">
        <table class="table">
            <tr>
                <th>STT</th>
                <th>Hình ảnh</th>
                <th>Tên Sản Phẩm</th>
                <th>Số Lượng</th>
                <th>Tổng Tiền</th>
            </tr>
            @foreach (var item in Model)
            {
                tongTien += item.PriceTotal;
                <tr>
                    <td>
                        @(i+1)
                    </td>
                    <td><img src="@item.ProductImg" class="img-cart"></td>
                    <td>
                        @item.ProductName
                    </td>
                    <td>
                        @item.SoLuong
                    </td>
                    <td>
                        @WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(item.Price, 0)
                    </td>

                </tr>
            }
            <tr>
               
                <td colspan="3" class="text-center"><b>Tổng tiền</b></td>

                <td colspan="2" class="text-center">
                    @WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(tongTien, 0) đ
                </td>
            </tr>
        </table>
    </div>



}
