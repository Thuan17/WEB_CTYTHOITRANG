@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.tb_Order>


@*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>*@


<div class="">
    <div class="row">
        <div class="col-xl-12">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {


                    <p>@item.Code</p>

                    <div class="card border shadow-none IdOrder" id="@item.OrderId">
                        <div class="card-body">
                            @Html.Action("Par_OrderDetailSuccess", "User", new { id = item.OrderId })
                            <div>
                                <div class="row" data-id="@item.OrderId">
                                    <div class="col-md-4">
                                        <div class="mt-3">

                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="mt-3">

                                            <h5 class="text-muted mb-2">Tổng tiền : @WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(item.TotalAmount)</h5>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <span style="color:lightslategray;width:5px" aria-label="Vui lòng chỉ nhấn " Đã nhận được hàng" khi đơn hàng đã được giao đến bạn và sản phẩm nhận được không có vấn đề nào." tabindex="0">
                                                    Vui lòng chỉ nhấn "Đã nhận được hàng" khi đơn hàng đã được giao đến bạn và sản phẩm nhận được không có vấn đề nào.
                                                </span>
                                            </div>
                                            <div class="col-md-2">
                                                @*<a href="/User/CancelOrder/@item.OrderId" class="btnCancelOrder btn btn-sm btn-primary">H</a>*@

                                                <button type="button" class="btn btn-primary  " id="@item.OrderId">Mua Lại</button>
                                                @*<button class="btn btn-success">Đã Nhận Hàng</button>*@
                                            </div>
                                            <div class="col-md-2">
                                                <button class="btn btn-dark">Liên Hệ Shop</button>
                                            </div>
                                        </div>
                                    </div>



                                </div>
                            </div>

                        </div>
                    </div>



                }
            }
            else
            {
                <div class="col-xl-4">
                    <div class="mt-5 mt-lg-0">
                        <div class="card border shadow-none">
                            <div class="card-header bg-transparent border-bottom py-3 px-4">
                                <h5 class="font-size-16 mb-0">Order Summary <span class="float-end">#MN0124</span></h5>
                            </div>
                            <div class="card-body p-4 pt-2">

                                <div class="table-responsive">
                                    <table class="table mb-0">
                                        <tbody>
                                            <tr>
                                                <td>Sub Total :</td>
                                                <td class="text-end">$ 780</td>
                                            </tr>
                                            <tr>
                                                <td>Discount : </td>
                                                <td class="text-end">- $ 78</td>
                                            </tr>
                                            <tr>
                                                <td>Shipping Charge :</td>
                                                <td class="text-end">$ 25</td>
                                            </tr>
                                            <tr>
                                                <td>Estimated Tax : </td>
                                                <td class="text-end">$ 18.20</td>
                                            </tr>
                                            <tr class="bg-light">
                                                <th>Total :</th>
                                                <td class="text-end">
                                                    <span class="fw-bold">
                                                        $ 745.2
                                                    </span>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- end table-responsive -->
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- end card -->

            <div class="row my-4">
                <div class="col-sm-6">
                    <a href="/home/index" class="btn btn-link text-muted">
                        <i class="mdi mdi-arrow-left me-1"></i> Tiếp tục mua hàng
                    </a>
                </div>
            </div> <!-- end row-->
        </div>


    </div>

</div>

