@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.tb_ProductDetai>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
@if (Model != null)
{
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
            <section id="team" class="section bg-gray-100">
                <div class="container">
                    
                 
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            if (item.Size == 1)
                            {
                                <div class="col-lg-3 col-sm-6 my-3 wow fadeInUp" data-wow-duration="0.3s" data-wow-delay="0.4s" style="visibility: visible; animation-duration: 0.3s; animation-delay: 0.4s; animation-name: fadeInUp;">
                                    <div class="hover-top-in text-center">

                                        <div class="mx-2 mx-xl-3 shadow rounded-3 position-relative mt-n4 bg-white p-4 pt-6 mx-4 text-center hover-top--in">
                                            <h6 class="fw-700 dark-color mb-1 text-danger"> Size:M </h6>
                                            <h6>
                                                Số lượng : @item.Quantity
                                            </h6>
                                            <a href="/admin/ProductDetail/Edit/@item.ProductDetai" class="btn btn-success">Sửa</a>
                                        </div>
                                        
                                    </div>
                                </div>
                            }
                            else if (item.Size == 2)
                            {
                                <div class="col-lg-3 col-sm-6 my-3 wow fadeInUp" data-wow-duration="0.3s" data-wow-delay="0.4s" style="visibility: visible; animation-duration: 0.3s; animation-delay: 0.4s; animation-name: fadeInUp;">
                                    <div class="hover-top-in text-center">

                                        <div class="mx-2 mx-xl-3 shadow rounded-3 position-relative mt-n4 bg-white p-4 pt-6 mx-4 text-center hover-top--in">
                                            <h6 class="fw-700 dark-color mb-1 text-danger"> Size:L </h6>
                                            <h6>
                                                Số lượng : @item.Quantity
                                            </h6>
                                            <a href="/admin/ProductDetail/Edit/@item.ProductDetai" class="btn btn-success">Sửa</a>
                                        </div>
                                       
                                    </div>
                                </div>

                            }
                            else
                            {
                                <div class="col-lg-3 col-sm-6 my-3 wow fadeInUp" data-wow-duration="0.3s" data-wow-delay="0.4s" style="visibility: visible; animation-duration: 0.3s; animation-delay: 0.4s; animation-name: fadeInUp;">
                                    <div class="hover-top-in text-center">

                                        <div class="mx-2 mx-xl-3 shadow rounded-3 position-relative mt-n4 bg-white p-4 pt-6 mx-4 text-center hover-top--in">
                                            <h6 class="fw-700 dark-color mb-1 text-danger"> Size:XL </h6>
                                            <h6>
                                                Số lượng : @item.Quantity
                                            </h6>
                                            <a href="/admin/ProductDetail/Edit/@item.ProductDetai" class="btn btn-success">Sửa</a>
                                        </div>
                                    </div>
                                </div>

                            }
                        }

                    </div>
                </div>
            </section>


        </div>
        <div class="col-1"></div>
    </div>
   


}




