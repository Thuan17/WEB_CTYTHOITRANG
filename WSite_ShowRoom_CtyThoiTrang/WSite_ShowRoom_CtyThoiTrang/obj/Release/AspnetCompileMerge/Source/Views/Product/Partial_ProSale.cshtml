@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.tb_Products>
<style>
    .wap-items-ss {
        width: 300px;
        text-align: center;
    }

        .wap-items-ss hover {
        }

    .wap-ss-img {
        text-align: center;
        width: 100%;
    }

        .wap-ss-img img {
            height: 250px;
            margin: 0 auto;
        }


    .slick-prev:before, .slick-next:before {
        font-family: fontawesome;
        font-size: 30px;
        color: #fff;
    }

    .slick-prev:before {
        content: '\f100';
    }

    .slick-next:before {
        content: '\f101';
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css" integrity="sha512-wR4oNhLBHf7smjy0K4oqzdWumd+r5/+6QO/vDda76MW5iug4PT7v86FoEkySIJft3XA0Ae6axhIvHrqwm793Nw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
@if (Model != null && Model.Any())
{
    <div class="best_sellers">
        <div class="">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title new_arrivals_title">
                        <h2 class="">Best Sellers</h2>
                    </div>
                </div>
            </div>
            <div class="row multiple-items p-5 ">
                @foreach (var item in Model)
                {
                    var strImge = "";
                    var img = item.tb_ProductImage.FirstOrDefault(x => x.IsDefault);
                    if (img != null)
                    {
                        strImge = img.Image;
                    }
                    <div class="col-md-12 col-sm-12 col-xs-12  ">
                        <a href="@Url.Action("Detail", "Product", new { id =item.ProductId, alias = item.Alias })">
                            <div class="wap-items-ss brbox  " @item.tb_ProductCategory.Alias>
                                <div class="wap-ss-img ">
                                    <img src="@strImge" class="w-75" alt="@item.Title">
                                </div>
                                @if (item.PriceSale > 0)
                                {
                                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                                }
                                <div class="textleft">
                                    <h6 class="product_name">@item.Title</h6>
                                    @if (item.PriceSale > 0)
                                    {
                                        <div class="product_price">@WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(item.PriceSale, 0)<span>@WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(item.Price, 0)</span></div>

                                    }
                                    else
                                    {
                                        <div class="product_price">@WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(item.Price, 0)</div>
                                    }
                                </div>
                            </div>
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>

}
<script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js" integrity="sha512-XtmMtDEcNz2j7ekrtHvOVR4iwwaD6o/FUJe6+Zq+HgcCsk3kj4uSQQR8weQ2QVj1o0Pk6PwYLohm206ZzNfubg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script type="text/javascript">
    $('.multiple-items').slick({
        infinite: true,
        slidesToShow: 4,
        slidesToScroll: 1,
        autoplay: true,
        arrows: false,
        autoplaySpeed: 2000,
    });</script>